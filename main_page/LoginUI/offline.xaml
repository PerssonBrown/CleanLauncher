<Page x:Class="CleanLauncher.main_page.LoginUI.offline"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CleanLauncher.main_page.LoginUI"
      xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
      mc:Ignorable="d" 
      d:DesignHeight="330" d:DesignWidth="320"
      KeepAlive="True" 
      Title="offline">

    <Grid>
        <TextBox Height="25" Width="270"
                 x:Name="playerName"
                 pu:TextBoxHelper.Header="用户名：" FontSize="15"
                 pu:TextBoxHelper.IsClearButtonVisible="True" pu:TextBoxHelper.FocusedBorderBrush="#306ACF" pu:TextBoxHelper.FocusedShadowColor="#306ACF"
                 VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" />
    </Grid>
</Page>
