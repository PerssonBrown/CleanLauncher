<pu:WindowX x:Class="CleanLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanLauncher"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        mc:Ignorable="d"
        Title="Clean Minecraft Launcher" Height="450" Width="800">
    <Grid>
        <!--左侧选择栏-->
        <Button Height="30" Width="70" Content="主页" FontSize="15" pu:ButtonHelper.CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,30,0,0" Click="MainPage_Click"/>
        <Button Height="30" Width="70" Content="下载" FontSize="15" pu:ButtonHelper.CornerRadius="5" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,90,0,0"/>
        <Button Height="30" Width="70" Content="设置" FontSize="15" pu:ButtonHelper.CornerRadius="5" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,150,0,0"/>
        <Button Height="30" Width="70" Content="关于" FontSize="15" pu:ButtonHelper.CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="25,0,0,30"/>
        <!--右侧主页面-->
        <ContentControl Height="430" Width="680" x:Name="CtrlWindow" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    </Grid>
</pu:WindowX>
